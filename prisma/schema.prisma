generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model products {
  id                  Int      @id @default(autoincrement())
  referencia          String
  description         String
  unidad_medida       Int
  categoria           String
  almacen             String
  stock_minimo        Int
  stock_actual        Int

}

model entradas {
  id                     BigInt      @id @default(autoincrement())
  producto_id            BigInt
  fecha                  DateTime    @default(now())
  cantidad               Int
  observaciones          String
  id_usuario             Int
}

model salidas {
  id                     BigInt      @id @default(autoincrement())
  producto_id            BigInt
  id_detalle_cliente     BigInt
  id_usuario             BigInt
  fecha                  DateTime @default(now())
  cantidad               Int
  observaciones          String
}

model inventario {
  id                     BigInt      @id @default(autoincrement())
  producto_id            BigInt
  stock_actual           Int
}